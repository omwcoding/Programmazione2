public class Kart {
    private String marca;
    private String tipo; // "base", "medio", "avanzato"
    private String numeroDiSerie;
    private boolean cambioAutomatico;
    private boolean freniADisco;
    private boolean contachilometri;

    public Kart(String marca, String tipo, String numeroDiSerie) {
        this.marca = marca;
        this.tipo = tipo;
        this.numeroDiSerie = numeroDiSerie;
        this.cambioAutomatico = false;
        this.freniADisco = false;
        this.contachilometri = false;

        if (tipo.equals("medio")) {
            this.cambioAutomatico = true;
        } else if (tipo.equals("avanzato")) {
            this.cambioAutomatico = true;
            this.freniADisco = true;
            this.contachilometri = true;
        }
    }
    // getters and setters for all fields
}

